# This is Git's per-user configuration file.
[gpg]
	program = /opt/homebrew/bin/gpg
[user]
# Please adapt and uncomment the following lines:
    name = <%= name %>
    email = <%= email %>
    <% if signing_key  && !signing_key.strip.empty? %>
    signingkey = <%= signing_key %>
    <% end %>
[difftool]
	prompt = false
[diff]
	tool = vimdiff
[alias]
	a = a
	au = add -u
	s = status
	d = diff
	df = difftool
	br = branch
	lo = log --oneline -n 10
	p = pull
	c = commit
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[commit]
	gpgsign = true
[tag]
	gpgsign = true
